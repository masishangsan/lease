page{
  background-color: #EBEBEB;
  font-family: 微软雅黑;
}
.swiper {
 height: 400rpx;
 width: 100%;
}
.swiper image {
 height: 100%;
 width: 100%;
}
.good{
  padding: 0.8rem;
  background-color: #fff;
}
.good image{
  width: 1rem;
  height: 1rem;
}
.good .first{
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
}
.first view:nth-child(2){
  background-color: #fed74b;
  font-size: 0.8rem;
  height: 1.5rem;
  text-align: center;
  line-height: 180%;
  border-radius: 0.2rem;
  width: 5rem;
  color: #fff;
}
.good .price{
  color: red;
  font-size: 1rem;
  margin: 0.5rem 0;
}
.good .drop{
  color:#ccc;
  font-size: 0.8rem;
}
.second{
  font-size: 0.7rem;
  display: flex;
  justify-content: space-between;
}
.second .left{
  
  justify-content: space-between;
  display: flex;
  align-items: center;
}
.left view{
  margin: 0.5rem 0;
  padding: 0.05rem;
  border: 1px solid #333;
  color: #333;
  box-sizing: border-box;
  line-height: 100%;
  height: 1rem;
  border-radius: 5rpx;
}
.left view:nth-child(2){
  margin-left: 10rpx;
}
.right image{
  margin-top: 0.5rem;
}
.ws{
  height: 1rem;
  font-size: 0.8rem;
  color: #878787;
  line-height: 1rem;
  padding: 0.25rem;
}
.message{
  background-color: #fff;
  padding: 0.3rem;
}
.list{
  width: 100%;
}
.list .row{
  display: flex;
  font-size: 0.75rem;
  height: 1.5rem;
  line-height: 1.5rem;
  margin-bottom: 0.1rem;
  
}
.row view:nth-child(1){
  background-color: #fed74b;
  flex: 1;
  text-align: center;
}
.row view:nth-child(2){
  margin-left: 0.2rem;
  background-color: #FFFFE0;
  flex: 4
}
.row2{
  display: flex;
  align-items: center;
  /* height: 3rem; */
  margin-bottom: 0.4rem;
}
.row2 view{
  font-size: 0.78rem;

  flex: 15
}
.row2 image{
  flex: 1;
  width: 1rem;
  height: 1rem;
  align-self: flex-start;
  margin-top: 0.5rem;
  margin-right: 0.2rem;
}
.img image{
  width: 100%;
  display: block;
}
.to_cart{
  display: flex;
  align-items: center;
  height: 2.7rem;
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #EBEBEB;
}
.to_cart image{
  width: 1.7rem;
  height: 1.7rem;
}
.to_cart>view:nth-child(1){
  font-size: 0.6rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  flex: 3;
  height: 100%;
  
}
.to_cart>view:nth-child(2){
  background-color: #fed74b; 
  height: 100%; 
  flex: 7;
  text-align: center;
  line-height: 250%;
}
.box{
  padding-bottom: 2.7rem;
}









































