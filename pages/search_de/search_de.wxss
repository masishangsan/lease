.top{
  height: 3rem;
  border-bottom: 1px solid #c1c1c1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-family: 微软雅黑;
}
.top view:nth-child(2){
  font-size: 0.9rem;
  margin-right: 0.3rem;
  margin-left: 0.2rem;
  color: #333;
}
.search{
  display: flex;
  width: 17rem;
  height: 2rem;
  background-color: 	#EDEDED;
  border: 1px solid 	#EEE9E9;
  border-radius: 0.2rem;
  margin-left: 0.5rem;
  flex-grow: 1;
}
.search view:nth-child(1){
  width: 1.5rem;
  height: 1.5rem;
  padding-left: 0.4rem;
  padding-top: 0.4rem;
}
.search view:nth-child(2){
  height: 100%;
   width:100%;
}
.search view:nth-child(2) input{
  width:100%;
  height: 100%;
  font-size: 0.8rem;
  line-height: 100%;
  flex-grow: 1;
}

.search view:nth-child(1) image{
  width: 1rem;
  height: 1rem;
}
.hot{
  padding-top: 1rem;
  padding-left: 1rem;
}
.title{
  display: flex;
  font-size: 0.8rem;
  color: #9C9C9C;
  font-family: 微软雅黑;
}
.title image{
  width: 1rem;
  height: 1rem;
  margin-right: 0.7rem;
}
.classify{
  margin-top: 1rem;
  display: flex;
  width: 95%;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-bottom: 0.8rem;
  border-bottom: 1px solid #E5E5E5;
}
.classify view{
  margin-right: 1rem;
  margin-bottom: 0.5rem;
  font-size: 0.8rem;
  font-family: 微软雅黑;
  border: 1px solid #CCCCCC;
   padding: 0 0.7rem; 
  border-radius: 5rem;
  height: 1.5rem;
  line-height: 1.5rem;
}
.classify view:nth-child(odd){
  border-color: #fed74b;
  color: #fed74b;
}
.action{
  font-family: 微软雅黑;
  width: 95%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #E5E5E5;
  font-size: 0.8rem;
  padding: 0.8rem 0;
}
.action view:nth-child(1){
  color: #9C9C9C;
}
.action view:nth-child(2){
  color: #555555;
}
.action view:nth-child(1) image{
  margin-right: 0.5rem;
}
.action view:nth-child(2) image{
  margin-right: 0.3rem;
}
.action view{
  display: flex;
}
.action image{
  width: 1rem;
  height: 1rem;
}
















































