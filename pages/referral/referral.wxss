page{
  font-family: 微软雅黑;
}
.pad{
  padding-top:3rem;
  position: relative;
}
.title{
  height: 100rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px  solid #c1c1c1;
}
.title .t_r{
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.t_r view:nth-child(1){
  margin-right: 20rpx;
}
.category{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #f9f9f9;
}
.category navigator{
  /*border-right: 1px solid #c1c1c1; */
  padding: 20rpx;
  width: 48%;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}
.category navigator:nth-child(odd){
  margin-left: 20rpx;
}
 .category{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.category navigator view {
  font-size: 0.7rem;
}
.category navigator>view view:nth-child(2){
  margin-top: 0.2rem;
  width: 100%;

  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.category navigator view view:nth-child(3){
  color: #fed74b;
  margin: 0.2rem 0;

}
.category navigator view view:nth-child(4){
  color: #c1c1c1;
  margin: 0.2rem 0;
}
.body .good image{
  width:100%;
  height: 6rem;
}
 .category .op{
  width: 300rpx;
  height: 200rpx;
}  
.bottom_good{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottom_good .right{
  text-align: right;
}
.bottom_good .right image{
  width: 80rpx;
  height: 80rpx;
} 
.bottom_good .left{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom_good .left view:nth-child(1){
  margin-top: 0.14rem;
  margin-right:20rpx;
  color: #8F8F8F;
}
.bottom_good .left view{
  border: 1px solid #000;
  border-radius: 5rpx;
  height: 1rem;
  padding: 0.05rem;
  box-sizing: border-box;
  line-height: 0.7rem;
}
.screen{
  position: absolute;
  z-index: 999;
  background-color: #fff;
  left: 0;
  right: 0;
  top: 0;
  bottom:0;
}
.screen_de{
  padding-bottom: 3rem;
}
.search_tab{
  height: 100rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px  solid #c1c1c1;
  font-size: 30rpx;
}
.search_tab view:nth-child(1) image{
  width: 50rpx;
  height: 50rpx;
}
.head{
  height:80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 20rpx;
}
.head view:nth-child(1){
  display: flex;
  /* margin-left: 0.2rem; */
  /*margin-top: 0.2rem;*/
}
.head view:nth-child(1) view:nth-child(2){
  font-size: 0.8rem;
  font-family: 微软雅黑;
  line-height: 150%;
}
.head>view:nth-child(1) view:nth-child(1){
  color: #fed74b;
  font-weight: bold;
  font-size: 0.9rem;
  margin-top: 0.4rem; 
  margin-right:0.2rem;
  line-height: 100%;
}
.head view:nth-child(2) image{
  width: 1rem;
  height: 1rem;
}
.head view:nth-child(2){
  margin-top: 10rpx;
}
 .below{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0.2rem 1rem;
  max-height: 4rem;
  overflow: hidden;
} 
.pull{
     display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      padding: 0.2rem 1rem;
}
.below view,.pull view{
  font-family: 微软雅黑;
  text-align: center;
  width: 30%;
  font-size: 0.7rem;
  height: 1.5rem;
  line-height: 1.5rem;
  box-sizing: border-box;
  color: #333;
  background-color: #e6e6e6;
  margin-bottom: 1rem;
  border-radius: 0.5rem;
  padding: 0 0.2rem;
}

.below .active,.pull .active{
  background-color:#fed74b;
  color: #fff;
}
.affirm{
  height: 3rem;
  display: flex;
  justify-content: space-between;
  align-items:  center;
  position: fixed;
  width: 100%;
  bottom: 0;
}
.affirm view{
  flex: 1;
  height: 100%;
  text-align: center;
  line-height: 310%;
  font-size: 1rem;
  font-family: 微软雅黑;
  box-sizing: border-box;
  
  
}
.affirm view:nth-child(1){
  color: #fed74b;
  border-right: 1px solid #e6e6e6;
  background-color: #fff;
}
.affirm view:nth-child(2){
  background-color: #fed74b;
  color: #fff;
}
.img{
  height: 200rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}



























































