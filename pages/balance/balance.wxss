page{
  background-color: #EBEBEB;
  font-family: 微软雅黑;
}
.head{
  background-color: #fed74b;
}
.up{
  height: 300rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.up view:nth-child(1){
  font-size: 30rpx;
}
.up view:nth-child(2){
  font-size: 60rpx;
  font-weight: bold;
}
.down{
  display: flex;
  justify-content: center;
  height: 120rpx;
  align-items: center;
}
.down view{
  background-color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  height: 70rpx;
  width: 180rpx;
}

.zhangdan{
  height: 80rpx;
  color: #333;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.consume{
  background-color: #fff;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
















































